################################################################################
# GAIK Toolkit - Environment Variables
#
# Copy this file to .env and add your API keys
################################################################################

################################################################################
# EXTRACT FEATURE - LLM API Keys
# Install with: pip install gaik[extract]
################################################################################

# OpenAI API Key (default provider for extract)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
# Get your key: https://console.anthropic.com
ANTHROPIC_API_KEY=

# Google AI API Key (for Gemini models)
# Get your key: https://ai.google.dev
GOOGLE_API_KEY=

# Azure OpenAI (for extract feature)
AZURE_API_KEY=
AZURE_ENDPOINT=

################################################################################
# PARSER FEATURE - PDF/Image Parsing
# Install with: pip install gaik[parser]
################################################################################

# For standard OpenAI (use_azure=False)
# Uses OPENAI_API_KEY from above

# For Azure OpenAI (use_azure=True, default)
# All three variables required:
AZURE_API_KEY=
AZURE_ENDPOINT=
AZURE_DEPLOYMENT=

# Optional: Azure API version (defaults to 2024-12-01-preview)
# AZURE_API_VERSION=2024-12-01-preview
